<!DOCTYPE html>
<header>
  <title>Bookers2
  </title>
</header>
<!--header-->
<div>
   <%= flash[:notice] %>
</div>
<!--ユーザーログイン後にフラッシュメッセージ-->

<!--バリデーション-->

<!-- BODY -->
<div class="container px-5 px-sm-0">
 <div class="row">
  <div class="col-md-3">
<!-- ユーザーの詳細 -->
     <h3>User info</h3>
     <%= image_tag current_user.get_profile_image(100,100) %>
     <table class="table">
       <tbody>
         <tr></tr>
         <tr>
           <th>name</th>
           <th><%= current_user.name %></th>
         </tr>
         <tr>
           <th>introduction</th>
           <th><%= current_user.introduction %></th>
         </tr>
       </tbody>
     </table>
         <%= link_to edit_user_path(current_user) do %>
         <div class="btn btn-outline-secondary btn-block">
          <span>
           <span>
            <i class="fas fa-user-cog"></i>
           </span>
         </div>
    <% end %>
<!--新規投稿-->
    <h2 class="mt-3">New book</h2>
    <%= form_with model: @books do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title, accept: "image/*" %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br>
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
    <% end %>
   </div>


<!-- ユーザーの投稿一覧 -->
 <div class="col-md-8 offset-md-1">

   <h2>Users</h2>
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>image</th>
        <th><h3>name</h3></th>
        <th cokspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
       <tr>
         <td><%= image_tag user.get_profile_image(100,100) %></td>
         <td><%= user.name %></td>
         <td><%= link_to "Show", user_path(user) %></td>
       </tr>
      <% end %>
   </tbody>
   </table>
  </div>
 </div>
</div>
<!--%= paginate books %!>-->

