<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 px-5 px-sm-0">
      <h2>Log in</h2>
      <form action="/users/sign_in" accept-charset="UTF-8" method="post">
        <br>
        <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <p>Name</p>
        <%= f.text_field :name, autofocus: true, class: "form-control", placeholder: "ユーザー名" %>
        <p>Password</p>
        <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"inputPassword", placeholder:"パスワード" %>
        
        <%= f.submit "Log in", class:"btn btn-lg btn-block btn-info mt-5" %>
        
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me</span>
      <% end %>
        <% end %>
      </form>
      <a href="/users/sign_up">Sign up</a>
      <br>
      <a href="/users/password/new">Forgot your password?</a>
    </div>
  </div>
</div>